{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "paths": {
      "~/*": [ "./src/*" ],
      "~assets/*": [ "./assets/*" ],
      "§/*": [ "./srvr/src/*" ],
      "§data/*": [ "./srvr/data/*" ],
      "§shared/*": [ "./srvr/shared/*" ],
    },
    "skipLibCheck": true,
    "types": [ "@cloudflare/workers-types" ]
  },
  "include": [
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./srvr/**/*.ts",
    "./srvr/**/*.tsx",
    // "./srvr/shared/**/*.ts",
    // "./srvr/shared/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
